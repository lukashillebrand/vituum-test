<div class="col-12 col-lg-7 offset-lg-1">
	<h1 class="h3 py-3 mb-3">{{ title }}</h1>
	<div class="lead mb-5 text-indent">
		{{ text }}
	</div>
	
	{% if subtopics %}
		{% for topic in topics %}
			{% for subtopic in topic.subtopics %}
				<a href="{{ subtopic.url }}.html" class="card-topics-link">
					<div class="card mb-3 card-topic-line">
						<div class="card-body d-flex align-items-center gap-3 p-3">
							<i class="fa-solid fa-{{ subtopic.icon }} fa-xl d-none"></i>
							<img src="https://via.placeholder.com/100x100" class="img-fluid rounded" width="100" height="100" alt="">
							<h5 class="card-title m-0">{{ subtopic.name }}</h5>
						</div>
					</div>
				</a>
			{% endfor %}
		{% endfor %}
	{% endif %}

	{% if stepper %}
		{% include 'stepper.twig' %}
	{% endif %}
</div>